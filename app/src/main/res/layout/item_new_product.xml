<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/newproduct_item_iv"
        android:src="@mipmap/clearbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/newproduct_item_name_tv"
        android:layout_toRightOf="@+id/newproduct_item_iv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="测试"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/newproduct_item_price_tv"
        android:layout_toRightOf="@+id/newproduct_item_iv"
        android:layout_below="@+id/newproduct_item_name_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="[参考]进价+其它(人民币)："
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/newproduct_item_priceVal_tv"
        android:layout_toRightOf="@+id/newproduct_item_price_tv"
        android:layout_below="@+id/newproduct_item_name_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="0.00+0.00"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/newproduct_item_profi_tv"
        android:layout_toRightOf="@+id/newproduct_item_iv"
        android:layout_below="@+id/newproduct_item_price_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="单件毛利(人民币)：￥"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/newproduct_item_profiVal_tv"
        android:layout_toRightOf="@+id/newproduct_item_profi_tv"
        android:layout_below="@+id/newproduct_item_price_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="0.00"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="0.00"
        android:id="@+id/newproduct_item_outprice_tv"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"/>

</RelativeLayout>
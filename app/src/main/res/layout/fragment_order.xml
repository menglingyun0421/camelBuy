<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorRed">
        <Button
            android:id="@+id/order_title_leftBtn"
            android:visibility="gone"
            android:text="选择"
            android:textColor="@color/colorWhite"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:background="@null"
            android:textSize="16dp"
            android:layout_marginLeft="20px"/>
        <TextView
            android:id="@+id/order_title_midTv"
            android:layout_centerInParent="true"
            android:text="订单"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="100dp"
            android:layout_height="44dp" />
        <ImageView
            android:id="@+id/order_title_rightIv"
            android:src="@mipmap/plus"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_width="30dp"
            android:layout_height="44dp" />
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/home_rg_order"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <RadioButton
            android:id="@+id/order_rb_unfinish"
            android:text="未完成"
            android:textSize="16dp"
            style="@style/order_radioButton_style"/>

        <RadioButton
            android:id="@+id/order_rb_finish"
            android:text="全部"
            android:textSize="16dp"
            style="@style/order_radioButton_style"/>
    </RadioGroup>
    <ImageView
        android:id="@+id/order_line"
        android:layout_below="@+id/order_nav"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>
    <FrameLayout
        android:id="@+id/activity_order_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

</LinearLayout>

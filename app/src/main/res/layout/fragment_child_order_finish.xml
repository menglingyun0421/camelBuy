<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >
        <ImageView
            android:id="@+id/order_unfinish_iv"
            android:src="@mipmap/search_icon_"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            />
        <EditText
            android:id="@+id/order_unfinish_et"
            android:hint="请输入用户姓名"
            android:layout_toRightOf="@+id/order_unfinish_iv"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/order_finish_lv"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <LinearLayout
        android:id="@+id/order_unfinish_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <TextView
            android:text="总计"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/order_unfinish_tv"
            android:text="~"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            />
        <TextView
            android:text="个订单"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/set_save_btn"
        android:text="备份数据"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/set_backup_btn"
        android:layout_below="@+id/set_save_btn"
        android:text="恢复备份数据"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/set_query_btn"
        android:visibility="gone"
        android:layout_below="@+id/set_backup_btn"
        android:text="查询数据"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/set_addpoint_btn"
        android:layout_below="@+id/set_backup_btn"
        android:text="增加点数"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/set_excel_btn"
        android:layout_below="@+id/set_addpoint_btn"
        android:text="将订单导出Excel"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@color/colorRed"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/set_text_tv"
            android:text="当前剩余点数："
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="44dp" />
        <TextView
            android:id="@+id/set_money_tv"
            android:layout_toRightOf="@+id/set_text_tv"
            android:text="200"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="44dp" />
    </RelativeLayout>


</RelativeLayout>